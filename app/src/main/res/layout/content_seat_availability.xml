<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/seat_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dayeong.seatmanagementsystem.SeatAvailabilityActivity"
    tools:showIn="@layout/activity_seat_availability">

    <TextView
        android:id="@+id/txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인원 현황"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btn_table_2"
        android:layout_alignStart="@+id/btn_table_2"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/table_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/0"
        android:layout_marginLeft="5dp"
        android:layout_alignBaseline="@+id/txtView"
        android:layout_alignBottom="@+id/txtView"
        android:layout_alignRight="@+id/btn_table_2"
        android:layout_alignEnd="@+id/btn_table_2" />

    <Button
        android:id="@+id/btn_table_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtView"
        android:layout_margin="4dp"
        android:background="@android:color/holo_green_light"
        android:clickable="false"
        android:text="1" />

    <Button
        android:id="@+id/btn_table_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtView"
        android:layout_margin="4dp"
        android:layout_toRightOf="@+id/btn_table_1"
        android:background="@android:color/holo_green_light"
        android:clickable="false"
        android:text="2" />

    <Button
        android:id="@+id/btn_table_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtView"
        android:layout_margin="4dp"
        android:layout_toRightOf="@+id/btn_table_2"
        android:background="@android:color/holo_green_light"
        android:clickable="false"
        android:text="3" />

    <Button
        android:id="@+id/btn_table_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_table_1"
        android:layout_margin="4dp"
        android:background="@android:color/holo_green_light"
        android:clickable="false"
        android:text="4" />

    <Button
        android:id="@+id/btn_table_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_table_1"
        android:layout_margin="4dp"
        android:layout_toRightOf="@+id/btn_table_4"
        android:background="@android:color/holo_green_light"
        android:clickable="false"
        android:text="5" />

    <Button
        android:id="@+id/btn_table_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_table_1"
        android:layout_margin="4dp"
        android:layout_toRightOf="@+id/btn_table_5"
        android:background="@android:color/holo_green_light"
        android:clickable="false"
        android:text="6" />

</RelativeLayout>
