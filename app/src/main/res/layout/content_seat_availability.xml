<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/seat_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dayeong.seatmanagementsystem.SeatAvailabilityActivity"
    tools:showIn="@layout/activity_seat_availability">

    <TextView
        android:id="@+id/txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:textSize="18dp"
        android:text="사용가능/총좌석 :" />

    <TextView
        android:id="@+id/table_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtView"
        android:layout_alignBottom="@+id/txtView"
        android:textSize="18dp"
        android:layout_toRightOf="@+id/txtView"
        android:text="0/0" />

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txtView"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="1"
            android:paddingTop="70dp">

            <ImageView
                android:id="@+id/btn_table_1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:clickable="false"
                android:paddingBottom="20dp"
                android:src="@drawable/f_1"
                android:visibility="visible"
 />

            <ImageView
                android:id="@+id/btn_table_2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:clickable="false"
                android:paddingBottom="20dp"
                android:src="@drawable/f_2"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/btn_table_3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:clickable="false"
                android:paddingBottom="20dp"
                android:src="@drawable/f_3"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/btn_table_4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:clickable="false"
                android:paddingBottom="20dp"
                android:src="@drawable/f_4"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
>

            <ImageView
                android:id="@+id/btn_table_5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:clickable="false"
                android:paddingBottom="20dp"
                android:src="@drawable/f_5"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/btn_table_6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:clickable="false"
                android:paddingBottom="20dp"
                android:src="@drawable/f_6"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/btn_table_7"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:clickable="false"
                android:paddingBottom="20dp"
                android:src="@drawable/f_7"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/btn_table_8"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:clickable="false"
                android:paddingBottom="20dp"
                android:src="@drawable/f_8"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/btn_table_9"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:clickable="false"
                android:paddingBottom="20dp"
                android:src="@drawable/f_9"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/btn_table_10"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:clickable="false"
                android:paddingBottom="20dp"
                android:src="@drawable/f_10"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:src="@drawable/free" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용가능좌석" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:src="@drawable/taken" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용중좌석" />

    </LinearLayout>
</RelativeLayout>
